
<div class="row">
		<%= render 'users/profile', user: current_user, book: @book2 %>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<div class="col-xs-4" style='margin-bottom: 50px;'>
			<%= attachment_image_tag(@book.user, :profile_image, :fill, 200, 200, fallback: "no-image-mini.jpg") %><br>
			<%= link_to @book.user.name, user_path(@book.user) %>
		</div>
		<div class="col-xs-5">
			<table class="table">
				<thead>
					<tr>
						<th><%= link_to @book.title, @book %></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><%= @book.body %></td>
					</tr>
					<tr>
						<td>
							<div id="favorites_buttons_<%= @book.id %>">
							<%= render 'favorites/favorite', book: @book %>
							</div>
						</td>
					</tr>
					<tr>
						<td>コメント数：<%= @book.book_comments.count %></td>
					</tr>
					<tr>
						<td>
							<% if @book.user == current_user %>
								<%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %>
								<%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
							<% end %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>

  <div class="col-xs-9">
  	<h4>コメント</h4>
  	<div style='text-align: center; margin-bottom: 30px;'>
		<%= form_with model:[@book, @book_comment] do |f| %>
		    <%= f.text_area :comment, class: "form-control", placeholder: "コメント" %>
		    <%= f.submit "コメントする", class: "btn btn-default" %>
		<% end %>
		<div id="comments_area">
		    <%= render 'book_comments/comment', book: @book %>
	    </div>
    </div>
	</div>
</div>

