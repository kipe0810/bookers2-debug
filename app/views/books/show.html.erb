
<div class="row">
		<%= render 'users/profile', user: current_user, book: @book2 %>

	<div class="col-xs-9">
		<h2>Book detail</h2>

			<div class="col-xs-4" style='margin-bottom: 50px;'>
				<%= attachment_image_tag(@book.user, :profile_image, :fill, 200, 200, fallback: "no-image-mini.jpg") %><br>
				<%= link_to @book.user.name, user_path(@book.user) %>
			</div>
			<div class="col-xs-5">
				<table class="table">
					<thead>
						<tr>
							<th><%= link_to @book.title, @book %></th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td><%= @book.body %></td>
						</tr>
						<tr>
							<td><%= render 'favorites/favorite', book: @book %></td>
						</tr>
						<tr>
							<td>コメント数：<%= @book.book_comments.count %></td>
						</tr>
					</tbody>
				</table>
				<% if @book.user == current_user %>
					<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
				<% end %>
			</div>

			<div style='text-align: center; margin-bottom: 30px;'>
				<%= form_for [@book, @book_comment] do |f| %>
				    <%= f.text_area :comment, class: "form-control", placeholder: "コメント" %>
				    <%= f.submit "コメントする", class: "btn btn-default" %>
				<% end %>
			</div>

			<h4>コメント</h4>
			<table class="table">
				<thead>
					<tr>
						<th>User</th>
						<th>date</th>
						<th>Comment</th>
					</tr>
				</thead>
				<tbody>
					<% @book.book_comments.each do |c| %>
					<tr>
						<td><%= link_to c.user.name, user_path(c.user) %></td>
						<td><%= c.created_at.strftime('%Y/%m/%d') %></td>
						<td><%= c.comment %></td>
						<% if c.user == current_user %>
						    <td><%= link_to "削除", book_book_comment_path(@book,c), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger" %>
						    </td>
						<% end %>
					</tr>
					<% end %>
				</tbody>
			</table>

	</div>
</div>

